@model ReviewListingModel

<div class="container">
    <form method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger col-sm-offset-4 col-sm-8"></div>

        <div class="form-group">
            <label asp-for="BookId" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                @*<select asp-for="BookId" asp-items=@() size="5" class="form-control"></select>*@

                @Html.DropDownListFor(m => m.BookId, Model.Books, "", new { @class = "form-control" })
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Title" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Author" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label col-sm-4"></label>
            <div class="col-sm-8">
                <textarea asp-for="Description" rows="8" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <a asp-controller="Reviews" asp-action="All"
                    class="btn btn-secondary">Back</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </form>
</div>