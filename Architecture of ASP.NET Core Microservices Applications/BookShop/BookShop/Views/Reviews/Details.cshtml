@model ReviewListingModel

@{ ViewData["Title"] = "Details"; }

<div class="row">
    <div class="col-md-10">
        <article>
            <h2>@Model.BookName</h2>

            <header>
                <h3>@Model.Title</h3>
            </header>

            <p>
                @Model.Description
            </p>

            <small class="author">
                @Model.Author
            </small>

            <footer>
                <div class="pull-right">
                    <a asp-controller="Reviews" asp-action="All"
                       class="btn btn-default btn-xs">Back</a>
                </div>
            </footer>
        </article>
        <hr>
    </div>
</div>