@model AuthorDetailsModel

@{ ViewData["Title"] = "Add Author"; }

<h2>@ViewData["Title"]</h2>

<div class="container">
	<form method="post" class="form-horizontal">
		<div asp-validation-summary="All" class="text-danger col-sm-offset-4 col-sm-8"></div>

		<div class="form-group">
			<label asp-for="FirstName" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="LastName" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-4 col-sm-8">
				<a asp-controller="Authors" asp-action="All"
				   class="btn btn-secondary">Back</a>
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	@await Html.PartialAsync("_ValidationScriptsPartial")
}