@using Microsoft.AspNetCore.Identity
@model IEnumerable<AuthorDetailsModel>
@*@inject SignInManager<IdentityUser> SignInManager*@

@{ ViewData["Title"] = "Authors"; }

@*<h2>@ViewData["Title"]</h2>*@

<div class="row">
	<div class="col-lg-4">
		<h2>All Authors</h2>
	</div>
</div>

<p>
	<a asp-controller="Authors" asp-action="Add" class="btn btn-secondary">Add New Author</a>
</p>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th scope="col">First Name</th>
			<th scope="col">Last Name</th>
			<th scope="col"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var author in Model)
		{
		<tr>
			<td>@author.FirstName</td>
			<td>@author.LastName</td>
			<td>
				<a asp-controller="Authors" asp-action="Details"
				   asp-route-id=@author.Id class="btn btn-primary">Details</a>
			</td>
		</tr>
		}
	</tbody>
</table>
