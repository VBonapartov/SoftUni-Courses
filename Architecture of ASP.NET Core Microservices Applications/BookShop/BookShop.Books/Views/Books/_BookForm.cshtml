@model BookDetailsModel

<div class="container">
	<form method="post" class="form-horizontal">
		<div asp-validation-summary="All" class="text-danger col-sm-offset-4 col-sm-8"></div>

		<div class="form-group">
			<label asp-for="Title" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="AuthorId" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<select asp-for="AuthorId" asp-items="Model.Authors" size="5" class="form-control"></select>
				<span asp-validation-for="AuthorId" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="CategoriesId" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<select asp-for="CategoriesId" asp-items="Model.CategoryList" size="5" multiple class="form-control"></select>
				<span asp-validation-for="CategoriesId" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Copies" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="Copies" class="form-control" />
				<span asp-validation-for="Copies" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Edition" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="Edition" class="form-control" />
				<span asp-validation-for="Edition" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="AgeRestriction" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="AgeRestriction" class="form-control" />
				<span asp-validation-for="AgeRestriction" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="ReleaseDate" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="ReleaseDate" class="form-control" />
				<span asp-validation-for="ReleaseDate" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Description" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<label asp-for="Price" class="control-label col-sm-4"></label>
			<div class="col-sm-8">
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-4 col-sm-8">
				<a asp-controller="Books" asp-action="All"
				   class="btn btn-secondary">Back</a>
				<button type="submit" class="btn btn-primary">Save</button>
			</div>
		</div>
	</form>
</div>